<div class="container mt-5">

    <div>
        <h1> {{name}} </h1>
    </div>

    <hr>

    <div class="row container">

        <div class="col-md-4 col-gd-3">
            <img src="{{eventImg}}" alt="{{name}}">
        </div>

        <div class="col-md-3">
            <p><strong>DESCRIPTION: </strong> {{description}} </p>
            <p><strong>START DATE: </strong> {{date.start}} </p>
            <p><strong>END DATE: </strong> {{date.end}} </p>
        </div>


        <div class="col-md-3 col-gd-6">
            <p><strong> ARTIST LIST: </strong></p>
            {{#each artists}}
            <a href="/api/getOneArtist/{{this}}" class="d-block mb-2"> {{this}} </a>
            {{/each}}
            {{!-- <p><strong>ASSISTANTS NUMBER: </strong> {{assistants.length}} </p> --}}

            {{!-- <p>Followes: {{followers.total}}</p>
            <p>Genero: {{genres}}</p> --}}

            {{!-- <div class="d-grid gap-2 col-3 mx-auto">
                <a href="/events" class="btn btn-dark btn-sm">Return to Events</a>
            </div> --}}
        </div>

        <div class="col-md-2">
            <p><strong> ASSISTANTS LIST ({{assistants.length}}): </strong></p>
            {{#each assistants}}
            <a href="/users/{{id}}" class="d-block mb-2"> {{username}} </a>
            {{/each}}
        </div>

    </div>

    <hr>

    <div class="container mt-5">
        <a href="/events/{{id}}/edit" class="btn btn-dark btn-sm">Edit Event</a>
    </div>
    <div class="container mt-5">
        <form action="/events/{{id}}/delete" method="POST">
            <button class="btn btn-danger"> Delete event </button>
        </form>
    </div>

    <div class="container mt-5">
        <form action="/events/{{id}}/assist" method="POST">
            <button class="btn btn-danger"> Assist </button>
        </form>
    </div>


</div>