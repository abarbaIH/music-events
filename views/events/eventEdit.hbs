<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1> Edit event </h1>

            <hr>

            <form action="/events/{{event.id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-5">
                    <label for="" class="form-label">Name</label>
                    <input type="text" class="form-control" id="" name="name" value="{{event.name}}">
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Descripction</label>
                    <input type="text" class="form-control" id="" name="description" value="{{event.description}}">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label"> Image </label>
                    <input type="file" class="form-control" id="profileImg" name="eventImg">
                </div>

                <div class="mb-3 ">
                    <label for="" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="" name="startDate" value="{{startDateFormatted}}">
                </div>

                <div class="mb-3 ">
                    <label for="" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="" name="endDate" value="{{endDateFormatted}}">
                </div>

                <div class="container mb-3">
                    <label for=""> LATITUD </label>
                    <input type="text" name="lat" value="{{event.location.coordinates.[0]}}">
                </div>

                <div class="container mb-3">
                    <label for=""> LONGITUD </label>
                    <input type="text" name="lon" value="{{event.location.coordinates.[1]}}">
                </div>

                <div class="container">

                    <div class="container mb-3">
                        <label for="artist1">Artista #1</label>
                        <input list="artist1results" id="artist1" name="artist1" value="{{event.artists.[0]}}">
                        <datalist id="artist1results">

                        </datalist>
                    </div>

                    <div class="container mb-3">
                        <label for="artist2">Artista #2</label>
                        <input list="artist2results" id="artist2" name="artist2" value="{{event.artists.[1]}}">
                        <datalist id="artist2results">

                        </datalist>
                    </div>

                    <div class="container mb-3">
                        <label for="artist3">Artista #3</label>
                        <input list="artist3results" id="artist3" name="artist3" value="{{event.artists.[2]}}">
                        <datalist id="artist3results">

                        </datalist>
                    </div>

                    <div class="container mb-3">
                        <label for="artist4">Artista #4</label>
                        <input list="artist4results" id="artist4" name="artist4" value="{{event.artists.[3]}}">
                        <datalist id="artist4results">

                        </datalist>
                    </div>

                    <div class="container mb-3">
                        <label for="artist5">Artista #5</label>
                        <input list="artist5results" id="artist5" name="artist5" value="{{event.artists.[4]}}">
                        <datalist id="artist5results">

                        </datalist>
                    </div>
                </div>

                <button type="submit" class="btn btn-dark mb-5">Update Event</button>
            </form>

        </div>

    </div>

</div>


<script src="/js/select-artists.js"></script>